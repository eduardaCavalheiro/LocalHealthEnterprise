@model IEnumerable<LocalHealth1.Models.Diagnostico>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-controller="Diagnostico" asp-action="Index">
    <p>
        Doenca: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SintomasPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doenca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SintomasPaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doenca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.CrmId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

